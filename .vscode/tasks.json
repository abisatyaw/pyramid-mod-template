{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "template",
            "type": "shell",
            "command": ".template/render/render.sh",
            "windows": {
                "command": ".template/render/render.bat",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}